# Helius Configuration (Required for webhooks)
HELIUS_API_KEY=your_helius_api_key_here
HELIUS_WEBHOOK_SECRET=your_random_secret_string_here

# Solana RPC (Fallback - Helius recommended)
SOLANA_RPC_URL=https://mainnet.helius-rpc.com/?api-key=YOUR_HELIUS_API_KEY

# Storage (Optional - for Vercel deployment)
# Use Vercel KV
KV_REST_API_URL=
KV_REST_API_TOKEN=

# OR use Upstash Redis
UPSTASH_REDIS_REST_URL=
UPSTASH_REDIS_REST_TOKEN=

# If neither KV/Redis is configured, local file storage (.data/invoices.json) will be used
